<!-- index.html -->
<!DOCTYPE html>
<html lang="ca">
<head>
<meta charset="UTF-8">
<title>Control de color</title>
<style>
  body { height: 100vh; transition: background-color 0.3s; }
</style>
</head>
<body>
<h1 id="estat">Fons blanc</h1>

<script>
// Connecta al teu servidor Render amb WSS
const ws = new WebSocket("wss://waikiki.onrender.com/ws");

ws.onopen = () => {
    console.log("WebSocket connectat correctament!");
};

ws.onmessage = (event) => {
    document.body.style.backgroundColor = event.data;
    document.getElementById("estat").textContent = "Color: " + event.data;
};

ws.onerror = (err) => {
    console.error("WebSocket error:", err);
};
</script>
</body>
</html>
